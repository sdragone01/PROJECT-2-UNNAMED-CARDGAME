{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>


          <h1>{{ deck.name }} </h1>

          <h2>Deck Type: </h2>
          <h3>{{ deck.genre }}</h3>
          <h1>{{deck.cardCol}}</h1>


          <a href="/decks/{{ deck._id }}/edit"><button>Edit</button></a>
          <form action="/decks/{{ deck._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
          </form>

          <form id="add-card-to-deck" action='/decks/{{deck._id}}' method="POST">
            <select name="cardId">
              {% for card in allCards %}  
                <option value="">
                  
                {{card.name}}
                 {% endfor %}
                </option>

            </select>
          
           <button type="submit">Add to Deck</button>
          </form>
        


          <a href="/decks/"><button>Back to Main</button></a>
        </article>
      </div>
{% endblock %}