{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>
          <h2>
            {{ deck.name }} 
          </h2>
          <h3>{{ deck.genre }}</h3> <br/>
          <a href="/decks/{{ deck._id }}/edit"><button>Edit</button></a>
          <form action="/decks/{{ deck._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
          </form>

          <a href="/decks/"><button>Back to Main</button></a>
        </article>
      </div>
{% endblock %}